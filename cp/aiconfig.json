{
  "name": "MicrosoftCopilot",
  "version": "1.0",
  "description": "AI assistant accessed through copilot.microsoft.com",
  
  "ai": {
    "provider": "Microsoft",
    "models": [
      "GPT-based models",
      "Proprietary Microsoft optimized models"
    ],
    "capabilities": {
      "webChat": true,
      "deepResearch": true,
      "imageGeneration": true,
      "richCards": true,
      "multiDeviceSync": true
    }
  },

  "integrations": {
    "microsoft365": {
      "word": true,
      "excel": true,
      "powerpoint": true,
      "outlook": true,
      "teams": true
    },
    "edgeBrowser": {
      "copilotMode": true,
      "tabAnalysis": true
    }
  },

  "features": {
    "summaries": true,
    "documentGeneration": true,
    "emailDrafting": true,
    "meetingNotes": true,
    "dataAnalysis": true,
    "contextAwareness": true
  },

  "security": {
    "enterpriseDataProtection": true,
    "graphContext": true,
    "noTrainingOnUserData": true
  },

  "platform": {
    "web": "https://copilot.microsoft.com",
    "mobileApp": true,
    "desktopIntegration": true
  }
}


